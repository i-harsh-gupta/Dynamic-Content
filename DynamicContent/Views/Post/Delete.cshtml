@model PageDeleteViewModel

@{
    ViewData["Title"] = "Delete Page";
    var photoPath = "~/files/" + (Model.ExistingPhotoPath ?? "default.jpg");
}

<h1 class="mt-3">Delete Page</h1>

<form method="post" class="mt-3">    
    <input asp-for="Id" hidden />
    <input asp-for="ExistingPhotoPath" hidden />
    <div class="row mb-3">
        <div class="col-sm-6">
            <label asp-for="PageTitle" class="form-label"></label>
            <input asp-for="PageTitle" class="form-control" disabled/>
        </div>
        <div class="col-sm-6">
            <label asp-for="PageUrl" class="form-label"></label>
            <input asp-for="PageUrl" class="form-control" disabled/>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="PageContent" class="form-label"></label>
        <textarea asp-for="PageContent" class="form-control" rows="15" disabled></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Photo" class="form-label"></label>
        <input asp-for="Photo" class="form-control" />
        <img src="@photoPath" class="mt-3 img-fluid" asp-append-version="true" style="width: 300px; height: 500px;" />

    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="index" asp-controller="post" class="btn btn-secondary">Back</a>
</form>
