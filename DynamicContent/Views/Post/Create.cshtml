@model PageCreateViewModel

@{
    ViewData["Title"] = "Create New Page";
}

<h1 class="mt-3">Create New Page</h1>

<form method="post" enctype="multipart/form-data" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col-sm-6">
            <label asp-for="PageTitle" class="form-label"></label>
            <input asp-for="PageTitle" class="form-control" />
            <span asp-validation-for="PageTitle" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="PageUrl" class="form-label"></label>
            <input asp-for="PageUrl" class="form-control" />
            <span asp-validation-for="PageUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="PageContent" class="form-label"></label>
        <textarea asp-for="PageContent" class="form-control" rows="15"></textarea>
        <span asp-validation-for="PageContent" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Photo" class="form-label"></label>
        <input asp-for="Photo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="index" asp-controller="post" class="btn btn-secondary">Back</a>
</form>
